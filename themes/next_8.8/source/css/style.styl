// ✅ 只在主容器上禁止横向滚动，不在 html/body 上
.main-inner {
  overflow-x: hidden;
}

// 所有容器强制 100%
.container, .main-inner, .content-wrap {
  width: 100% !important;
  max-width: 100vw !important;
}

// 代码块、表格、图片自适应
.post-body {
  pre, .highlight, table, img {
    max-width: 100% !important;
    overflow-x: auto !important;
    display: block;
  }

  // 长单词强制换行
  p, li {
    word-break: break-word;
  }
}
